<!doctype html>
<html lang="en">
<%- include('partials/head') %>
<script src="/js/login.js"></script>
    <body class="bodyLogin">
        <%- include('partials/header') %>
            <form class="formulario" action="/login" method="POST">
                <div id="ulErrors">
                    <ul type="none"></ul>        
                </div>
                <h1>Ingresá a tu cuenta</h1>
                <p class="etiqueta">Correo electrónico</p>
                <div class="contenedor">
                    <i class="fa-solid fa-at icon"></i>
                    <input type="email" name="user_email" id="user_email" value="<%= locals.user_email && user_email? user_email : '' %>">
                    <% if(locals.errors && errors.user_email) { %>
                        <p class="erroresLocales">
                            <%= errors.user_email.msg %>
                        </p>
                    <% } %>
                </div>
                <p class="etiqueta">Ingresá tu contraseña</p>
                <div class="contenedor">    
                    <i class="fa-solid fa-key icon"></i>
                    <input type="password" id="user_password" name="user_password" >
                    <div class="erroresLocales">
                        <% if(locals.errors && errors.user_password) { %>
                            <p>
                                <%= errors.user_password.msg %>
                            </p>
                        <% } %>
                    </div>
                </div>
                
                <p class="etiqueta">Recordar mi usuario</p>
                <input type="checkbox" class="checkbox" name="rememberUser">
            
                <button type="submit" class="button">Ingresar!!</button>
                <p>¿Todavía no tenés cuenta?<a class="link" href="/user/register"> Registrate</a></p>

            </form>
        <%- include('partials/footer') %>
    </body>

</html>