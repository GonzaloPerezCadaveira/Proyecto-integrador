<!doctype html>
<html lang="en">
<%- include('partials/head') %>

    <body class="bodyLogin">
        <%- include('partials/header') %>
            <form class="formulario" action="/login" method="POST">
                <h1>Ingresá a tu cuenta</h1>
                <p class="etiqueta">Correo electrónico</p>
                <div class="contenedor">
                    <i class="fa-solid fa-at icon"></i>
                    <input type="text" name="email">
                </div>
                <div class="erroresLocales">
                <% if(locals.errors && errors.email) { %>
                    <p>
                        <%= errors.email.msg %>
                    </p>
                    <% } %>
                </div>
                <p class="etiqueta">Ingresá tu contraseña</p>
                <div class="contenedor">    
                    <i class="fa-solid fa-key icon"></i>
                    <input type="password"  name="password">
                </div>
                <div class="erroresLocales">
                    <% if(locals.errors && errors.password) { %>
                        <p>
                            <%= errors.password.msg %>
                        </p>
                </div>
                
                <p class="etiqueta">Recordar mi usuario</p>
                <input type="checkbox" class="checkbox" name="rememberUser">
            
           
                <input type="submit" value="Ingresar" class="button">
                <p>¿Todavía no tenés cuenta?<a class="link" href="/user/register"> Registrate</a></p>
                <div class="login-error">
                    <p>
                     <%= loginError %>
                    </p>
                </div>
            </form>
        <%- include('partials/footer') %>
    </body>

</html>