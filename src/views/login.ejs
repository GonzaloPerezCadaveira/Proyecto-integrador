<body class="text-center">
    <%- include('partials/header') %>
        <form class="loginuser" action="/users/login" method="POST">
            <div class="row">
                <div class="inicia mb-50">
                    <h3 style="text-align: -webkit-center; margin-bottom: 20px">Accedé a tu cuenta</h3>
                </div>

                <div class="datos row">
                    <div style="text-align: -webkit-center" >
                        <label for="email">Email<span>*</span></label>
                        <input type="text" class="form-control" style="max-width:15rem; margin-bottom:40px"
                            name="email" id="email" value="">
                    </div>

                    <div style="text-align: -webkit-center">
                        <label for="password">Contraseña<span>*</span></label>
                        <input type="password" class="form-control" style="max-width:15rem; margin-bottom:30px"
                            name="password" id="password" value="">
                        <label for="recordame">Recordame</label>
                        <input type="checkbox" style="max-width:15rem; margin-bottom:40px"  name="recordame"><br>
                    </div>

                    <div class="col-12">
                        <input type="submit" class="btn essence-btn" style="max-width:15rem; margin-bottom:40px" value="Iniciar Sesión">
                    </div>
                    <div>
                        <a style="text-decoration: none" href="/user/register">¿TODAVÍA NO TE REGISTRASTE?</a>
                    </div>
                </div>


            </div>
        </form>
        <%- include('partials/footer')%>
