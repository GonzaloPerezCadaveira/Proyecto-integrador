<html lang="en">
<%- include('partials/head') %>


    <%- include('partials/header') %>

        <div class="main-register">
            <div class="form-register">
                <form class="formulario" action="/user/register" method="POST" enctype="multipart/form-data">
                    <div id="ulErrors">
                        <ul type="none"></ul>
                    </div>
                    <h1 class="register-title">¡Creá tu cuenta!</h1>
                    <div class="contenedor">
                        <p class="etiqueta">Nombre y apellido</p>
                        <i class="fa-solid fa-user icon"></i>
                        <input type="text" name="user_name" id="user_name" class="input-register"
                            value="<%= locals.old && old.user_name? old.user_name : '' %>">
                        <% if(locals.errors && errors.user_name){ %>
                            <p class="erroresLocales">
                                <%= errors.user_name.msg %>
                            </p>
                            <% }; %>
                    </div>

                    <div class="contenedor">
                        <p class="etiqueta">Correo electrónico</p>
                        <i class="fa-solid fa-at icon"></i>
                        <input type="email" id="user_email" class="input-register" name="user_email"
                            value="<%= locals.old && old.user_email? old.user_email : '' %>">
                        <% if(locals.errors && errors.user_email){ %>
                            <p class="erroresLocales">
                                <%= errors.user_email.msg %>
                            </p>
                            <% } %>
                    </div>
                    <div class="contenedor">
                        <p class="etiqueta">Contraseña</p>
                        <i class="fa-solid fa-key icon"></i>
                        <input type="password" name="user_password" id="user_password" autocorrect="off"
                            class="input-register" autocapitalize="off"
                            value="<%= locals.old && old.user_password? old.user_password : '' %>">
                        <% if(locals.errors && errors.user_password){ %>
                            <p class="erroresLocales">
                                <%= errors.user_password.msg %>
                            </p>
                            <% }; %>
                    </div>
                    <div class="contenedor">
                        <p class="etiqueta">Imagen de perfil</p>
                        <i class="fa-regular fa-image icon"></i>
                        <input type="file" name="user_img" accept=".jpg, .png, .jpng" class="input-register">
                        <% if(locals.errors && errors.user_img){ %>
                            <p class="erroresLocales">
                                <%= errors.user_img.msg %>
                            </p>
                            <% } %>
                    </div>
                    <button type="submit" id="button-register" class="button">Registrate</button>
                    <p>Al registrarte como usuario aceptas nuestras condiciones de uso y
                        politica de Privacidad</p>
                    <p>¿Ya tenés cuenta?
                        <a class="link" href="/user/login">Iniciar sesión</a>
                    </p>
                </form>
            </div>

            <script src="/js/register.js"></script>
            <script src="/js/menu.js"></script>
            <%- include('partials/footer')%>
        </div>

</html>