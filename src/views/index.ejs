<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

    <body class="main-body">

        <%- include('partials/header') %>

            <div class="container-slider">
                <div class="slider" id="slider">
                    <div class="slider-section">
                        <img src="/image/slider1.jpg" alt="" class="slider-img">
                    </div>
                    <div class="slider-content">
                        <button class="slider-btn"></button>
                    </div>
                    <div class="slider-section">
                        <img src="/image/slider2.jpg" alt="" class="slider-img">
                    </div>
                    <div class="slider-section">
                        <img src="/image/slider3.jpg" alt="" class="slider-img">
                    </div>
                    <div class="slider-section">
                        <img src="/image/slider4.jpg" alt="" class="slider-img">
                    </div>
                </div>
                <div class="slider-btn slider-btn--right" id="btn-right">&#62;</div>
                <div class="slider-btn slider-btn--left" id="btn-left">&#60;</div>
            </div>
            <hr>
            <h1 class="titulo-section"> PRODUCTOS SELECCIONADOS </h1>
            <hr>
            <section>
                <div class="productos">
                    <% productos.forEach(function(element){ %>
                        <% if (element.discount > 0){ %>		
                        <article class="producto">
                            <a class="hipervinculo-productos" href="/products/detail/<%= element.id%>">
                                <img src="/image/<%= element.img %>">
                                <div class="contenedor-articulo">
                                    <p class="nombre_producto">
                                        <%= element.name %>
                                    </p>
                                    <i class="fa-solid fa-cart-shopping"></i>
                                    <div class="precio_descripcion">
                                        <p class="precio"> $<%= element.price %>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </article>
                        <% } %>
                    <%})%>
                </div>
            </section>


            <%- include('partials/footer') %>
    </body>
    <script src="/js/slider.js"></script>
    <script src="/js/menu.js"></script>

</html>